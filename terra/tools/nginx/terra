server {
  server_name api.dymaxionlabs.com;

  location = /favicon.ico { access_log off; log_not_found off; }
  location /static/ {
    root /home/ubuntu/terra;
  }

  location / {
    include proxy_params;
    proxy_pass http://unix:/home/ubuntu/terra/terra.sock;

    proxy_connect_timeout       600;
    proxy_send_timeout          600;
    proxy_read_timeout          600;
    send_timeout                600;
  }

  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/analytics.dymaxionlabs.com/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/analytics.dymaxionlabs.com/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
  if ($host = api.dymaxionlabs.com) {
    return 301 https://$host$request_uri;
  } # managed by Certbot

  server_name api.dymaxionlabs.com;
  listen 80;
  return 404; # managed by Certbot
}
